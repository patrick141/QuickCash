<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_request"
        android:layout_width="@dimen/et_request_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/profile_margin_fromIV"
        android:hint="@string/JDA_my_req_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_er" />

    <ImageView
        android:id="@+id/iv_er"
        android:layout_width="@dimen/request_user_iv_hw"
        android:layout_height="@dimen/request_user_iv_hw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />


    <TextView
        android:id="@+id/tv_myU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/profile_margin_fromIV"
        android:layout_marginTop="@dimen/profile_margin_top"
        android:text="@string/app_name"
        app:layout_constraintStart_toEndOf="@+id/iv_er"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>